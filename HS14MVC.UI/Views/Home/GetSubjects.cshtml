@model IEnumerable<HS14MVC.UI.Areas.Author.Models.SubjectVMs.SubjectListVM>

@{
    ViewData["Title"] = "GetSubjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Subjects</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Articles", "GetArticles", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
